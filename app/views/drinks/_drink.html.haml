- path = buy_user_path(@user, :drink => drink.id) if @user

.drink
  = link_to(path || '#', { class: 'drink-panel' }) do
    .drink-panel.panel.panel-default.text-center
      .panel-header
        %h6= drink.name
      .panel-body
        = image_tag drink.logo(:thumb), alt: drink.name, class: drink.active? ? "" : "disabled"
      .panel-footer
        = show_amount drink.price
